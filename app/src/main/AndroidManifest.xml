<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:usesCleartextTraffic="true"
            android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TSDC"
        tools:targetApi="31" >
        <activity
                android:name=".ui.view.ArtistaDetailActivity"
                android:exported="false"
                android:label="Detalle del Artista"
                android:theme="@style/Theme.TSDC" />
        <activity
            android:name=".ui.view.ColeccionistasActivity"
            android:exported="false"
            android:label="@string/title_activity_coleccionistas"
            android:theme="@style/Theme.TSDC" />
        <activity
            android:name=".ui.view.ArtistasActivity"
            android:exported="false"
            android:label="@string/title_activity_artistas"
            android:theme="@style/Theme.TSDC" />
        <activity
            android:name=".ui.view.AlbumesActivity"
            android:exported="false"
            android:label="@string/title_activity_albumes"
            android:theme="@style/Theme.TSDC" />
        <activity
            android:name=".ui.view.CreateAlbumActivity"
            android:exported="false"
            android:label="@string/title_activity_create_album"
            android:theme="@style/Theme.TSDC" />
        <activity
                android:name=".ui.view.AlbumDetailActivity"
                android:exported="false"
                android:label="Detalle del Álbum"
                android:theme="@style/Theme.TSDC" />
        <activity
                android:name=".ui.view.TrackSelectionActivity"
                android:exported="false"
                android:label="Asociar Canciones"
                android:theme="@style/Theme.TSDC" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TSDC" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
